<?xml version="1.0" encoding="UTF-8"?>
<ContentView xmlns="http://xamarin.com/schemas/2014/forms" 
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TiendaXamarin.vistas.Menuprincipal.Cuerpo">

    <ScrollView Padding="12">
        
        <Frame CornerRadius="40"
               HasShadow="False">

            <StackLayout Margin="0,0,0,0"
                         HorizontalOptions="Center"  >
                <Frame BackgroundColor="Transparent" CornerRadius="100" HasShadow="False" HeightRequest="100" WidthRequest="125">
                    <Image Aspect="AspectFill" Source="{Binding Imagen}"/>
                </Frame>
                <Label Text="{Binding Descripcion}"
                       FontAttributes="Bold"
                       FontSize="20"
                       TextColor="Black"/>
                <Label Text="Hot y Spicy"
                       />
                <Label Text="{Binding Precio}" TextColor="#EA6A88"
                       FontSize="24"
                       FontAttributes="Bold"/>
            </StackLayout>
            
        </Frame>
        
    </ScrollView>
    
</ContentView>