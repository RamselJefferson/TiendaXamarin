<?xml version="1.0" encoding="UTF-8"?>
<ContentView xmlns="http://xamarin.com/schemas/2014/forms" 
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TiendaXamarin.vistas.Menuprincipal.Encabezado"
             >
    <Grid Padding="15,0,15,0">
        <StackLayout>
            <StackLayout Orientation="Horizontal"
                        HorizontalOptions="FillAndExpand">
               
                    <Image Margin="15" Source="drawable/menu.png"
                           HeightRequest="23"/> 
                
                
                <Label Text="MDFOOD" 
                       FontAttributes="Bold"
                       Margin="0,15,0,0"
                       HorizontalOptions="CenterAndExpand"
                       FontSize="20"/>
                

                    <Image Margin="15" HeightRequest="25" Source="drawable/carritodecompras.png"/>
              
            </StackLayout>
            
            <Frame CornerRadius="50"
                   HasShadow="False"
                   Padding="15,0,0,0" Margin="15">
                <StackLayout   Orientation="Horizontal">

                    
                    <Entry   x:Name="searchBar" Placeholder="Buscar..." TextChanged="OnSearchBarTextChanged" WidthRequest="300" />
                </StackLayout>
            </Frame>
     
        </StackLayout>
    </Grid>
</ContentView>